    <script type="text/javascript">
function useraction(id) {
  console.log("here");
  var request = new Request('/productcatalog/addtocart/'+id, {
    method: 'POST'
  });

  fetch(request).then(function(response) { 
  var result = response.json().then(function(j){
                                //alert(j[0]._id);
                                if(j.status==true){
                                    alert("added to cart");
                                }
                                else{
                                  alert("unable to add");
                                }
                                
                              });

  });

}

</script>
{{# each products}}
<div class="row">
	{{# each this}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.img}}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{this.name}}</h3>
        <p class="description">{{this.description}}</p>
      	<p id="he">
		<input id="input-21e" value="{{this.avg_ratings}}" type="text" class="rating" data-min=0 data-max=5 data-step=0.5 data-size="xs" title="">
  		</p>
        <div class="clearfix">
        	<div class="price pull-left">${{this.price}}</div>
        	<button onclick="useraction('{{this._id}}')" class="btn btn-default pull-right btn-success" role="button">Buy</button>

        <!--  <a href="/productcatalog/addtocart/{{this._id}}" onclick="alert('item added'); return true;" class="btn btn-default pull-right btn-success" role="button">Buy</a> -->
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}
