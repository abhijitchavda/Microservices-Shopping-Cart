{{# each products}}
<div class="row">
	{{# each this}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.img}}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{this.name}}</h3>
        <p class="description">{{this.description}}</p>
      	<p id="he">
		<input id="input-21e" value="{{this.avg_ratings}}" type="text" class="rating" data-min=0 data-max=5 data-step=0.5 data-size="xs" title="">
  		</p>
        <div class="clearfix">
        	<div class="price pull-left">${{this.price}}</div>
        	<button class="btn btn-default pull-right btn-success" role="button">Buy</button>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}
